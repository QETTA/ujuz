{
  "permissions": {
    "defaultMode": "editing",
    "allow": [
      "Bash(pnpm typecheck)",
      "Bash(pnpm test*)",
      "Bash(pnpm dev*)",
      "Bash(pnpm build)",
      "Bash(pnpm lint*)",
      "Bash(pnpm --dir mobile*)",
      "Bash(git status*)",
      "Bash(git diff*)",
      "Bash(git log*)",
      "Bash(git add*)",
      "Bash(git commit*)",
      "Bash(git push*)",
      "Bash(git checkout -- *)",
      "Bash(git branch*)",
      "Bash(git stash*)",
      "Bash(ls *)",
      "Bash(rm -rf dist/)",
      "Bash(rm -rf index.ts)",
      "Bash(rm -rf src/api/)",
      "Bash(rm -rf tsconfig.build.json)",
      "Bash(codex exec*)",
      "Bash(curl *)",
      "Bash(gh *)",
      "Read",
      "Write",
      "Edit",
      "Glob",
      "Grep",
      "mcp__codex-spark__codex",
      "mcp__codex-spark__codex-reply"
    ]
  },
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "hooks": {
    "TaskCompleted": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "pnpm typecheck"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "INPUT=$(cat); CMD=$(echo \"$INPUT\" | jq -r '.tool_input.command // empty'); if echo \"$CMD\" | grep -qE 'rm -rf (/|~|\\*)'; then echo 'Dangerous rm -rf blocked' >&2; exit 2; fi; exit 0"
          }
        ]
      }
    ]
  }
}
